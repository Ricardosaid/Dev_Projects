@model UserValidation.Views.Home.Account.ModelBinding

@{
    ViewData["Title"] = "Model Binding";    
}



<div class="container-fluid border" style="padding: 20px">
    
    <form method="post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Username" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Credential.Username" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="Credential.Username"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Credential.Password" class="control-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Credential.Password" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="Credential.Password"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="login"/>
            </div>
            <div class="col-5">

            </div>
        </div>
    </form>
</div>
